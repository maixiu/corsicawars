<UserControl x:Class="CorsicaWars.PrettyGameBoard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="500" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Border x:Name="cardPlayer1" Grid.Row="0" Padding="25"/>
        <Border x:Name="cardMiddle" Grid.Row="1" Padding="25"/>
        <Border x:Name="cardPlayer2" Grid.Row="2" Padding="25"/>
    </Grid>
</UserControl>
